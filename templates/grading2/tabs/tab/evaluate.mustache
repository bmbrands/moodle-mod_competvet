<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="tab-main">
    <div class="container-fluid">
        <div data-region="evaluations">
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <canvas id="evaluationChart" width="400" height="400"></canvas>
            </div>
            <div class="col-6">
                <canvas id="selfEvaluationChart" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2>Commentaires</h2>
            </div>
            <div class="col-12" data-region="evaluations-comments">
            </div>
        </div>
    </div>
</div>
<div class="tab-aside">
    <div class="p-3" data-region="tab-side">
        <div class="certifheading d-flex align-items-center">
          <span class="mr-2">{{> mod_competvet/svg/chat}}</span>
          {{#str}}evaluate, mod_competvet{{/str}}
        </div>
        <div class="mb-2">{{#str}}enterskillassesment, mod_competvet{{/str}}</div>
        <form class="form-inline">
            <div class="form-group">
                <input type="number" class="form-control" name="globalgrade" data-action="globalgrade" data-grade-id="0" data-criterium-id="1" value="{{globalgrade}}" min="0" max="100" step="1" />
                <label class="certifheading ml-2">
                    / 100
                </label>
            </div>
        </form>
    </div>
</div>