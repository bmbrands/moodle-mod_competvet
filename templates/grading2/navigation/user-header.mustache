{{#user-header}}
    <div class="user-header">
        <div class="userimage mr-3">
            <img src="{{user.pictureurl}}" alt="{{user.fullname}}" class="rounded-circle">
        </div>
        <div class="userinfo">
            <div class="fullname text-truncate h6 mb-1">{{user.fullname}}</div>
            <div class="period text-truncate">{{user.email}}</div>
        </div>
    </div>
    <div class="user-grade">
        <div class="h6 text-center border-bottom pb-2">{{#str}}evaluation, mod_competvet{{/str}}</div>
        <div class="certifsection">
            <form>
                {{! create 4 form groups, the first is a static, the second is a dropdown, the third a textarea and the fourth has the submit button }}
                <div class="form-group">
                    <label >
                        {{#str}}suggestedgrade, mod_competvet{{/str}} :
                    </label>
                    <div class="font-weight-bold">{{suggestedgrade}}</div>
                </div>
                <div class="form-group">
                    <label>
                        {{#str}}finalgrade, mod_competvet{{/str}} :
                    </label>
                    <input type="select" class="form-control" name="finalgrade" data-action="finalgrade" data-grade-id="0" data-criterium-id="3" value="{{finalgrade}}" min="0" max="100" step="1" />
                </div>
                <div class="form-group">
                    <label>
                        {{#str}}comment, mod_competvet{{/str}} :
                    </label>
                    <textarea class="form-control" name="comment" data-action="comment" data-grade-id="0" data-criterium-id="4">{{comment}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" data-action="save" data-grade-id="0">
                        {{#str}}submit, mod_competvet{{/str}}
                    </button>
                </div>
            </form>
        </div>
    </div>
{{/user-header}}
