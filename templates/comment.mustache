<div class="commentsection">
    <div class="d-flex usernavigation">
        {{#observerinfo}}
            <div class="userimage mr-2">
                <img src="{{{userpictureurl}}}" alt="{{fullname}}" class="rounded-circle">
            </div>
            <div class="commentuserinfo">
                <div class="fullname text-truncate">{{fullname}}</div>
                {{#note}}<div class="note">{{{note}}}</div>{{/note}}
            </div>
        {{/observerinfo}}
        {{^observerinfo}}
            <div class="userimage mr-2">
                <img src="{{{picture}}}" alt="{{fullname}}" class="rounded-circle">
            </div>
            <div class="commentuserinfo">
                <div class="fullname text-truncate">{{fullname}}</div>
            </div>
        {{/observerinfo}}
    </div>
    {{#comments}}
        <div class="comment position-relative {{$classes}}{{/classes}}" data-region="commenttext">
            {{$info}}{{info}}{{/info}}
            {{#commenttitle}}
                <div><strong>{{{commenttitle}}}</strong></div>{{/commenttitle}}
            <span class="shortened" data-region="shorttext">{{#shortentext}}200, {{{comment}}} {{{commenttext}}}{{/shortentext}}</span>
            <span class="fulltext d-none" data-region="fulltext">{{{comment}}} {{{commenttext}}}</span>
            <div class="showmoreless">
                &nbsp;
                <a href="#" class="showmore d-none" data-action="showmore">{{#str}}more, mod_competvet{{/str}}</a>
                <a href="#" class="showless d-none" data-action="showless">{{#str}}less, mod_competvet{{/str}}</a>
            </div>
        </div>
    {{/comments}}
    {{#comment}}
        <div class="comment position-relative {{$classes}}{{/classes}} single" data-region="commenttext">
            {{$info}}{{info}}{{/info}}
            <span class="shortened" data-region="shorttext">{{#shortentext}}200, {{{comment}}} {{{commenttext}}} {{/shortentext}}</span>
            <span class="fulltext d-none" data-region="fulltext">{{{comment}}} {{{commenttext}}}</span>
            <div class="showmoreless">
                &nbsp;
                <a href="#" class="showmore d-none" data-action="showmore">{{#str}}more, mod_competvet{{/str}}</a>
                <a href="#" class="showless d-none" data-action="showless">{{#str}}less, mod_competvet{{/str}}</a>
            </div>
        </div>
    {{/comment}}
</div>