<link rel="stylesheet" href="{{config.wwwroot}}/mod/competvet/scss/styles.css?v={{version}}" />
<div id="managecriteria" data-locked="{{locked}}" class="managecriteria manage" data-region="criteria" data-situation-id="{{situationid}}" data-cm-id="{{cmid}}">
    {{#inuse}}
        <div class="alert alert-warning">
            {{#str}}inuse, mod_competvet{{/str}}
        </div>
    {{/inuse}}
    <div class="d-flex align-items-center mb-3">
        <div class="navigation" data-region="navigation">
            {{> mod_competvet/manager/criteria/navigation}}
        </div>
    </div>
    <div class="grids" data-region="grids">
        {{> mod_competvet/manager/criteria/grids}}
    </div>
    <div class="d-flex justify-content-end align-items-center mb-3">
        <a class="btn btn-link jsbutton" href="#" data-action="add" data-type="grid">
            {{#str}}addgrid, mod_competvet{{/str}}
        </a>
    </div>
</div>
{{#debug}}
<pre id="debug"></pre>
{{/debug}}
{{#js}}
require(['mod_competvet/local/manager/manager_app_criteria'], function(manager) {
    // Prevent init if the page is not the criteria page.
    if (document.querySelector('[data-region="criteria"]')) {
        manager.init();
    }
});
{{/js}}
