{{#certification-results}}
    <div class="certif header">
        <div class="col1">
        </div>
        <div class="col2">
            <div class="description mb-2 d-flex justify-content-end"><strong>Niveau de confiance</strong></div>
        </div>
        <div class="col3">
            <div class="description mb-2"><strong>Réalisé</strong></div>
        </div>
        <div class="col4">
            <div class="description mb-2"><strong>Validé</strong></div>
        </div>
    </div>
    {{#criteria}}
        <div class="certif">
            <div class="col1">
                <div class="description mb-2">
                    <strong>{{title}}</strong>
                    <button class="btn btn-icon icon-no-margin" data-action="cert-decl" data-id="{{criterionid}}" data-decl-id="{{declid}}">
                        {{#pix}}t/message{{/pix}}
                        <span class="sr-only">{{#str}}comment, competvet{{/str}}</span>
                    </button>
                </div>
                <div>
                    {{#feedback}}
                        {{> mod_competvet/comment}}
                    {{/feedback}}
                </div>
                <div>
                    {{#validations}}
                        {{#feedback}}
                            {{> mod_competvet/comment}}
                        {{/feedback}}
                    {{/validations}}
                </div>
            </div>
            <div class="col2 d-flex justify-content-end">
                {{#level}}<span class="font-weight-bold">{{level}}</span><span class="mx-2">/</span><span>{{total}}</span>{{/level}}
            </div>
            <div class="col3">
                {{#realised}}
                    <i class="fa fa-check text-success" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}realised, competvet{{/str}}</span>
                {{/realised}}
                {{#notrealised}}
                    <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}notrealised, competvet{{/str}}</span>
                {{/notrealised}}
            </div>
            <div class="col4">
                {{#validated}}
                    <i class="fa fa-check text-success" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}verified, competvet{{/str}}</span>
                {{/validated}}
                {{#notvalidated}}
                    <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}notverified, competvet{{/str}}</span>
                {{/notvalidated}}
                {{#notreached}}
                    <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    <span class="sr-only">{{#str}}notrealised, competvet{{/str}}</span>
                {{/notreached}}
            </div>
        </div>
    {{/criteria}}
{{/certification-results}}