{{#user}}
    <div class="align-items-center usernavigation {{^cangrade}}d-none{{/cangrade}}{{#cangrade}}d-flex{{/cangrade}}">
        <button class="btn btn-icon icon-no-margin mx-2" data-action="prevuser" title="{{#str}}previoususer, mod_competvet{{/str}}">
            <i class="fa fa-chevron-left"></i>
        </button>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center" type="button" data-toggle="dropdown" aria-expanded="false">
                <div class="userinfo">
                    <div class="fullname text-truncate">{{user.fullname}}</div>
                </div>
            </button>
            <div class="dropdown-menu w-100">
                {{#userlist}}
                    <a class="dropdown-item" data-action="setuser" data-userid="{{id}}">
                        {{fullname}}
                    </a>
                {{/userlist}}
            </div>
        </div>
        <button class="btn btn-icon icon-no-margin mx-2" data-action="nextuser" title="{{#str}}nextuser, mod_competvet{{/str}}">
            <i class="fa fa-chevron-right"></i>
        </button>
    </div>
{{/user}}