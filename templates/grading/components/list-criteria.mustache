{{!
    @template mod_competvet/grading/components/list-criteria

    Creates the list of criteria for the note tab. For each criterium, it will
    display the title and the options.
    The options are radio buttons, and the user can select one of them for each criterium.

    Example context (json):
    {
    }
}}
{{#list-criteria}}
    {{#criteria}}
        <section>
            <h4 class="criterium-title h6">{{{title}}}</h4>
            <div class="criterium-options">
                {{#options}}
                    <div class="custom-control custom-checkbox">
                        <input type="radio" class="custom-control-input" id="criterium-{{criteriumid}}-option-{{optionid}}" name="criterium-{{criteriumid}}" value="{{grade}}" {{#selected}}checked{{/selected}}>
                        <label class="custom-control-label" for="criterium-{{criteriumid}}-option-{{optionid}}">{{{title}}} (<strong>{{#str}}points, mod_competvet, {{grade}}{{/str}}</strong>)</label>
                    </div>
                {{/options}}
            </div>
            <div class="mb-3">
                <label class="mt-2 mb-0" for="criterium-{{criteriumid}}-comment">{{#str}}comment, mod_competvet{{/str}}</label>
                <textarea class="form-control" id="criterium-{{criteriumid}}-comment" name="criterium-{{criteriumid}}-comment" rows="1">{{comment}}</textarea>
            </div>
        </section>
    {{/criteria}}
    <input type="submit" class="btn btn-primary" value="{{#str}}savechanges{{/str}}">
{{/list-criteria}}