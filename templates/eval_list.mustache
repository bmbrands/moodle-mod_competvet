<div class="eval-list">
    {{#groups}}
        <h3>{{name}}</h3>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>{{#str}}student, mod_competvet{{/str}}</th>
                <th>{{#str}}date{{/str}}</th>
                <th>{{#str}}list{{/str}}</th>
            </tr>
            </thead>
            <tbody>
            {{#students}}
                <tr>
                    <td rowspan="{{evalrows}}">{{studentname}}</td>
                </tr>
                {{#evaluations}}
                    <tr>
                        <td>
                            <span class="badge badge-primary">
                                {{#userdate}} {{planningstart}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}}
                            </span>
                            =>
                            <span class="badge badge-primary">
                            {{#userdate}} {{planningend}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}}
                            </span>
                        </td>
                        <td>
                            <h3>{{#str}}context, mod_competvet{{/str}}</h3>
                            <div>{{context}}</div>
                            {{> mod_competvet/eval_content}}
                            <h3>{{#str}}comment, mod_competvet{{/str}}</h3>
                            <div>{{comment}}</div>
                            <div class="d-flex">
                                {{#actions}}
                                    <div class="mx-3">{{> core/single_button}}</div>
                                {{/actions}}
                            </div>
                        </td>

                    </tr>
                {{/evaluations}}
            {{/students}}
            </tbody>
        </table>
    {{/groups}}
</div>