{{!
    @template mod_competvet/comment_obs_info

    Renders a single observer info.

    Example context (json):
    {
        "picture": "http://placekitten.com/100/100",
        "fullname": "John Doe",
        "comments": [
            {
                "commenttitle": "Well done",
                "commenttext": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed vitae nisl euismod, aliquam nunc nec, aliquam nu"
            },
            {
                "commenttitle": "How dit you do that?",
                "commenttext": "Pikachu ipsum dolor sit amet, vulpix jigglypuff vulpix pikachu jigglyp"
            }
        ]
    }
}}
<div class="d-flex usernavigation observer-info">
    {{#observerinfo}}
        <div class="userimage mr-2">
            <img src="{{{userpictureurl}}}" alt="{{fullname}}" class="rounded-circle">
        </div>
        <div class="commentuserinfo">
            <div class="fullname text-truncate">{{fullname}}</div>
            {{#note}}<div class="note">{{{note}}}</div>{{/note}}
        </div>
    {{/observerinfo}}
    {{^observerinfo}}
        <div class="userimage mr-2">
            <img src="{{{picture}}}" alt="{{fullname}}" class="rounded-circle">
        </div>
        <div class="commentuserinfo">
            <div class="fullname text-truncate">{{fullname}}</div>
        </div>
    {{/observerinfo}}
</div>