<div class="competvet-view-plannings">
    <div class="accordion" id="plannings-accordion">
        {{#categories}}
        <div class="card">
            <div class="card-header" id="competvet-view-plannings-cat-heading-{{categoryid}}">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#competvet-view-plannings-cat-{{categoryid}}"
                            aria-expanded="true" aria-controls="competvet-view-plannings-cat-{{categoryid}}">
                        {{categorytext}}
                    </button>
                </h2>
            </div>
            <div id="competvet-view-plannings-cat-{{categoryid}}" class="collapse show" aria-labelledby="competvet-view-plannings-cat-heading-{{categoryid}}" data-parent="#plannings-accordion">
                <div class="card-body">
                    {{#plannings}}
                        <div class="container ml-0">
                            <div class="card">
                                <div class="card-header">
                                    {{startdate}} - {{enddate}}
                                </div>
                                <div class="card-body">
                                    <p class="card-text">{{groupname}} ({{nbstudents}})</p>
                                    <a href="{{viewurl}}" class="btn btn-primary">{{#str}} view {{/str}}</a>
                                </div>
                            </div>
                        </div>
                    {{/plannings}}
                </div>
            </div>
        </div>
        {{/categories}}
    </div>
</div>