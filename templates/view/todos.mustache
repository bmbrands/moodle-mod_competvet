    Example context (json):
    {

    }
}}
<div class="competvet-view-todos">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">{{#str}}todo:targetuser, mod_competvet{{/str}}</th>
            <th scope="col">{{#str}}todo:situation, mod_competvet{{/str}}</th>
            <th scope="col">{{#str}}todo:planning, mod_competvet{{/str}}</th>
            <th scope="col">{{#str}}todo:type, mod_competvet{{/str}}</th>
            <th scope="col">{{#str}}todo:viewaction, mod_competvet{{/str}}</th>
        </tr>
        </thead>
        <tbody>
        {{#todos}}
            <tr>
                <td>{{targetuser}}</td>
                <td>{{planning}}</td>
                <td>{{type}}</td>
                <td><a href="{{viewactionurl}}">{{#str}}view{{/str}}</a></td>
            </tr>
        {{/todos}}
        </tbody>
    </table>
</div>