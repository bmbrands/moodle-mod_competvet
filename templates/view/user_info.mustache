{{!
    @template mod_competvet/view/user_info


    Example context (json):
    {
        'fullname': 'Student 1',
        'userpictureurl': 'http://localhost/moodle/pluginfile.php/3/user/icon/f1',
        'viewurl': 'http://localhost/moodle/user/view.php?id=3'
    }
}}
<div class="user-info container m-3 py-1">
    <div data-user-id="{{id}}">
        <img src="{{userpictureurl}}" alt="{{label}}" class="userpicture" style="width:2em;">
        {{#viewurl}}
            <a href="{{viewurl}}"><span>{{fullname}}</span></a>
        {{/viewurl}}
        {{^viewurl}}
            <span>{{fullname}}</span>
        {{/viewurl}}
        {{#rolename}}
            <span class="badge badge-secondary">{{.}}</span>
        {{/rolename}}
    </div>
    <div>
        {{#stats}}
            <span><span class="badge badge-primary badge-pill">{{nbdone}}/{{nbrequired}}</span></span> <span class="small">{{label}}</span>
        {{/stats}}
    </div>
</div>