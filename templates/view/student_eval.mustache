{{!
    @template mod_competvet/view/studentevaluations


    Example context (json):
    {

    }
}}
<div class="competvet-view-student-eval">
    <div class="container">
        <h3>{{#str}}context, mod_competvet{{/str}}</h3>
        {{#context}}
            <div class="container">
               {{{comment}}}
            </div>
        {{/context}}
        {{#criteria}}
            <div class="container m-3">
                <span>{{label}}</span>
                <span class="badge badge-{{badgetype}}">{{level}}</span>
            </div>
        {{/criteria}}
        <h3>{{#str}}comments, mod_competvet{{/str}}</h3>
        {{#comments}}
            <div class="container">
                <div>
                    <div class="card rounded-pill">
                        <div class="card-body">
                            {{#userinfo}}
                            <div>
                                <img src="{{userpictureurl}}" class="rounded-circle" width="50" height="50">
                                <a href="{{viewurl}}"><span>{{fullname}}</span></a>
                            </div>
                            {{/userinfo}}
                            <span class="font-italic">{{{comment}}}</span>
                        </div>
                    </div>
                </div>
            </div>
        {{/comments}}
    </div>
</div>