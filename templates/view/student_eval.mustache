{{!
    @template mod_competvet/view/studentevaluations


    Example context (json):
    {

    }
}}
<div class="competvet-view-student-eval">
    <div class="d-flex justify-content-end">
        {{#canedit}}
            <div>
                <button class="btn btn-primary m-3" data-cmid="{{cmid}}" data-id="{{id}}" data-action="eval-observation-edit" data-returnurl="{{editreturnurl}}">{{#str}}
                    observation:edit, mod_competvet{{/str}}</button>
            </div>
        {{/canedit}}
        {{#candelete}}
            <div>
                <button class="btn btn-danger m-3" data-cmid="{{cmid}}" data-id="{{id}}" data-action="eval-observation-delete">{{#str}}
                    observation:delete, mod_competvet{{/str}}</button>
            </div>
        {{/candelete}}
    </div>
    <div class="container">
        <h3>{{#str}}context, mod_competvet{{/str}}</h3>
        <div class="container">
            {{#context}}
                <div class="card rounded-pill p-3">
                    {{{comment}}}
                </div>
            {{/context}}
        </div>
        <div class="container">
            {{#criteria}}
                <div class="container m-3">
                    <span><a href="{{viewurl}}">{{label}}</a></span>
                    <span class="badge badge-{{badgetype}}">{{level}}</span>
                </div>
            {{/criteria}}
        </div>
        <h3>{{#str}}comments, mod_competvet{{/str}}</h3>
        <div class="container">
            {{#comments}}

                <div>
                    <div class="card rounded-pill p-3">
                        <div class="card-body">
                            {{#userinfo}}
                                <div>
                                    <img src="{{userpictureurl}}" class="rounded-circle" width="50" height="50">
                                    <a href="{{viewurl}}"><span>{{fullname}}</span></a>
                                </div>
                            {{/userinfo}}
                            <span class="font-italic">{{{comment}}}</span>
                        </div>
                    </div>
                </div>
            {{/comments}}
        </div>
    </div>
</div>
{{#js}}
    require(['{{modulename}}/local/forms/eval_observation_delete'], function(Form) {
        Form.init('{{modulename}}');
    });
    require(['{{modulename}}/local/forms/eval_observation_edit'], function(Form) {
        Form.init('{{modulename}}');
    });
{{/js}}